<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head.ejs") %>
    <body>
        <br>
        <div class="columns is-centered">
          <%- include("../partials/header.ejs") %>
        </div>  
        <br>
        <main>
            <div class="container">
                <h1 class="title is-4">User Login</h1>
                <h2 class="has-text-danger">You have entered the wrong Username or Password. Please try again.</h2>
                    <form class="container" action="/user/login" method="post">
                        <div class="field">
                            <label for="username" class="label">USERNAME</label>
                            <div class="control">
                                <input id="username" class="input" type="text" name="username" required/>
                            </div>       
                            <p class="help">Login name</p>                    
                        </div>
                        <div class="field">
                            <label for="password" class="label">PASSWORD</label>
                            <p class="control">
                                <input id="password" class="input" type="password" name="password" placeholder="Password">
                            </p>
                        </div>
                        <div class="field">
                            <div class="control">
                                <button class="button is-primary">
                                    Log In
                                </button>
                            </div>
                        </div>
                    </form>
                    <div id="leaveAlone">
                        <a href="/user/landing"><button class="button is-primary">back</button></a>
                    </div>                   
                </div>
            </div>
        </main>
    </body>
</html>